pipeline {

    agent{

        label 'master'

    }

    tools {

        maven 'maven'

        jdk 'java8'

    }



    stages{

        stage ('Code Validate'){

            steps {



                sh """

                echo "Perform Validate"

                mvn Validate

                """



            }

        }

        stage ('Code Compilation'){

            steps {

                sh """

                echo "Perform Compilation"

                mvn compile

                """

            }

        }



        stage ('Code Test'){

            steps{

                sh """

                echo "To test the code"

                mvv test

                """

            }

        }



        stage ('Code Package'){

            steps{

                sh """

                echo "Create the package"

                mvn package

                """

            }

        }

    }

}
